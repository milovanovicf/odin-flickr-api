<br>
<div id='container'>
  <h1 class='title'>Flickr Photo Search App</h1>
  <%= form_with url: "/", method: :get, local: true do |f|%>
  <div id='form-group'>
    <%= f.text_field :user_id, placeholder: 'User ID...'%>
    <%= f.submit 'Get Photos' %>
  </div>
<% end %>
<br>
<div class="container">
  <% if params[:user_id].nil? %>
    <div class='empty-tag'>
      <%= content_tag :p, 'So Empty! :(' %>
    </div>
  <% else %>
    <div class='photo-stream'>
      <% @photos.each do |photo| %>
        <img src="<%=Flickr.url_n(photo)%>">
      <% end %>
    </div>
  <% end %>
</div>
</div>